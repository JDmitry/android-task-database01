<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A992F0">

    <ImageButton
        android:layout_above="@id/label"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"/><!--Заменить изображение-->
    <TextView
        android:id="@+id/label"
        android:layout_centerInParent="true"
        android:layout_above="@id/container_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="@string/title_in_MainActivity"
        android:textSize="50sp"
        android:textColor="#000"/>
    <LinearLayout
        android:id="@+id/container_buttons"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/add_data"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="@string/button_to_insertActivity"
            android:onClick="addData"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/display_data"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="@string/button_to_displayActivity"
            android:onClick="displayData"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</RelativeLayout>